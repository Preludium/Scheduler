<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp"
    android:paddingVertical="5dp">

    <Button
        android:id="@+id/ingredient_listitem_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorPrimary"
        style="@style/TextAppearance.AppCompat.Button"
        android:text="+"
        android:textSize="30sp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/ingredient_listitem_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ingredient_listitem_add"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        style="@style/TextAppearance.AppCompat.Display1"
        android:text="0"

        />

    <TextView
        android:id="@+id/ingredient_listitem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ingredient_listitem_count"
        android:layout_marginStart="20dp"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/ingredient_listitem_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ingredient_listitem_count"
        android:layout_below="@id/ingredient_listitem_title"
        android:layout_marginStart="20dp"
        android:text="Description"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <Button
        android:id="@+id/ingredient_listitem_del"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorAccent"
        style="@style/TextAppearance.AppCompat.Button"
        android:text="-"
        android:textSize="30sp"
        android:textColor="@android:color/white" />

</RelativeLayout>