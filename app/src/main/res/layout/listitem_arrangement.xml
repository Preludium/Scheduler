<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/arrangement_listitem_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/arrangement_listitem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@id/arrangement_listitem_image"
        android:layout_toEndOf="@id/arrangement_listitem_image"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/arrangement_listitem_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Description"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_toEndOf="@id/arrangement_listitem_image"
        android:layout_alignBottom="@id/arrangement_listitem_image" />

    <TextView
        android:id="@+id/arrangement_listitem_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Tags"
        android:textColor="@color/colorAccent"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_toEndOf="@id/arrangement_listitem_image"
        android:layout_below="@id/arrangement_listitem_image" />

    <ImageButton
        android:id="@+id/arrangement_listitem_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_black_24dp"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

</RelativeLayout>